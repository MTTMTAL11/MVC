@model IEnumerable<RoboGebV6.Models.Racer>
@{
    ViewBag.Title = "Yarışmacı Sıralaması";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fa-solid fa-flag-checkered"></i> Yarışmacı Sıralaması</h2>
        <div>

            <button id="generateOrder" class="btn btn-primary me-2"><i class="fa-solid fa-random"></i> Sıralama Belirle</button>
            <button onclick="window.print()" class="btn btn-success"><i class="fa-solid fa-print"></i> Yazdır</button>
            <a class="btn btn-danger" href="/Racers/Index">Anasayfa</a>
        </div>
    </div>

    <!-- Animasyon Alanı -->
    <div id="loading" class="d-none text-center mb-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Sıralama Belirleniyor...</span>
        </div>
        <p class="mt-2">Sıralama Belirleniyor...</p>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <ul id="raceOrder" class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fa-solid fa-flag text-primary me-2"></i>
                            @item.Team
                        </span>
                        <span class="badge bg-primary rounded-pill">Yarışmacı</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<script>
    document.getElementById('generateOrder').addEventListener('click', function () {
        let loadingDiv = document.getElementById('loading');
        let list = Array.from(document.querySelectorAll('#raceOrder li'));

        // Animasyonu göster
        loadingDiv.classList.remove('d-none');

        // 2 saniyelik gecikme
        setTimeout(function () {
            loadingDiv.classList.add('d-none');

            // Sıralama belirleme
            for (let i = list.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [list[i].innerHTML, list[j].innerHTML] = [list[j].innerHTML, list[i].innerHTML];
            }

            // Sıra numarası ekleme
            list.forEach((item, index) => {
                let name = item.innerHTML.trim();
                item.innerHTML = `<strong>${index + 1} -</strong> ${name}`;
            });

        }, 2000);
    });
</script>
